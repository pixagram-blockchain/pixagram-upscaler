{
  "name": "@pixagram/upscaler",
  "version": "0.2.0",
  "description": "High-performance pixel art rendering engines with WebGL2 GPU acceleration and WASM support",
  "keywords": [
    "pixel-art",
    "upscaling",
    "xbrz",
    "crt",
    "hexagonal",
    "webgl",
    "wasm",
    "image-processing",
    "retro",
    "gamedev"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./crt": {
      "import": "./dist/crt-gpu.js",
      "types": "./dist/crt-gpu.d.ts"
    },
    "./hex": {
      "import": "./dist/hex-gpu.js",
      "types": "./dist/hex-gpu.d.ts"
    },
    "./xbrz": {
      "import": "./dist/xbrz-gpu.js",
      "types": "./dist/xbrz-gpu.d.ts"
    },
    "./wasm": {
      "import": "./dist/wasm/renderart.js",
      "types": "./dist/wasm/renderart.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:wasm && npm run build:ts",
    "build:ts": "tsc",
    "build:wasm": "wasm-pack build --target web --out-dir dist/wasm && npm run build:wasm:cleanup",
    "build:wasm:cleanup": "rm -f dist/wasm/.gitignore dist/wasm/package.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "node --test dist/**/*.test.js"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "wasm-pack": "^0.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
